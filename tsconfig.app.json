{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue", "tailwind.config.js"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "allowJs": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["/*"],
      "@root/*": ["../*"],
      "@app/*": ["app/*"],
      "@api": ["api"],
      "@entities/*": ["entities/*"],
      "@shared/*": ["shared/*"],
      "@composables": ["composables"],
      "@features/*": ["features/*"],
      "@components/*": ["components/*"],
      "@widgets/*": ["components/lib/*"],
      "@ui/*": ["components/ui/*"],
      "@layouts/*": ["components/containers/*-layout"],
      "@views/*": ["components/containers/*-view"],
      "@utils": ["utils"],
      "@types": ["types"],
      "@styles/*": ["styles/*"]
    }
  }
}
