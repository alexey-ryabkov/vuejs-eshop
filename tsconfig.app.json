{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue", "tailwind.config.js"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "allowJs": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["/*"],
      "@root/*": ["../*"],
      "@app/*": ["app/*"],
      "@layouts/*": ["layouts/*"],
      "@api": ["api"],
      "@entities/*": ["entities/*"],
      "@shared/*": ["shared/*"],
      "@composables": ["composables"],
      "@store/*": ["store/*"],
      "@features/*": ["features/*"],
      "@components/*": ["components/*"],
      "@views/*": ["views/*"]
    }
  }
}
